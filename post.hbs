<style>
	h1{font-size:6em; font-weight: 400 !important;}
	h2{font-size:4rem; font-weight: 400 !important;}
	h3{font-size:3.5rem; font-weight: 400 !important;}
	h4{font-size:3rem; font-weight: 400 !important;}
	li{
		list-style-type: disc;
	}
</style>

{{!< default}}

{{#post}}



<div class="progress-container">
	<span class="progress-bar"></span>
</div>


<main class="content" role="main" style="margin-top:1em; font-size:2em;">
	

	<article class="{{post_class}}">
		<div class="inner">

			<section class="post-content">
				<h1 class="post-title" style="font-size:2.5em;">{{{title}}}</h1>
	<span class="post-meta"><time datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMM YYYY"}}</time> | {{reading_time minute=(t "1 min read") minutes=(t "% min read")}}</span>
				{{content}}
			</section>

			<section class="post-info">

				<!--
				<div class="post-share">
					<span class="post-info-label">{{t "Share:"}}</span>
					<a class="twitter" href="https://twitter.com/share?text={{title}}&url={{url absolute="true"}}" onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
						<i class="ic ic-twitter"></i><span class="hidden">Twitter</span>
					</a>
					<a class="facebook" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}" onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
						<i class="ic ic-facebook"></i><span class="hidden">Facebook</span>
					</a>
				</div>
				-->
				
				{{#if tags}}
				<aside class="post-tags">
					<span class="post-info-label">{{t "Tags:"}}</span>
					{{tags separator=" , " }}
				</aside>
				{{/if}}

				<div class="clear"></div>

			</section>


			<section class="post-comments">
				<a id="show-disqus" class="post-comments-activate">{{t "Show Comments"}}</a>
			   <div id="disqus_thread"></div>
			   <div id="disqus_thread">
					<script>
					var disqus_config = function () {
						this.page.url = "{{url absolute="true"}}";  
						this.page.identifier = "ghost-{{comment_id}}"
					};
					(function() {
					var d = document, s = d.createElement('script');
					s.src = 'https://EXAMPLE.disqus.com/embed.js';
					s.setAttribute('data-timestamp', +new Date());
					(d.head || d.body).appendChild(s);
					})();
					</script>
				</div>
			</section>

      {{#if @labs.subscribers}}
      <section class="post-subscribe">
				<p>{{t "Get the latest posts delivered right to your inbox."}}</p>
        {{subscribe_form placeholder=(t "Your email address") form_class="post-subscribe-form" input_class="post-subscribe-input" button_class="post-subscribe-button"}}
      </section>
      {{/if}}

			<aside class="post-nav">
				{{#next_post}}
					<a class="post-nav-next" href="{{url}}">
						<section class="post-nav-teaser">
							<i class="ic ic-arrow-left"></i>
							<h2 class="post-nav-title">{{title}}</h2>
							<p class="post-nav-excerpt">{{excerpt words="12"}}&hellip;</p>
						</section>
					</a>
				{{/next_post}}
				{{#prev_post}}
					<a class="post-nav-prev" href="{{url}}">
						<section class="post-nav-teaser">
							<i class="ic ic-arrow-right"></i>
							<h2 class="post-nav-title">{{title}}</h2>
							<p class="post-nav-excerpt">{{excerpt words="12"}}&hellip;</p>
						</section>
					</a>
				{{/prev_post}}
				<div class="clear"></div>
			</aside>


		</div>
	</article>
</main>

{{/post}}
