{{!< default}}
<header id="blog-header"{{#if @site.cover_image}} {{/if}}>
	<div class="inner">
		<nav id="navigation">
			{{#if @site.logo}}
			<span class="blog-logo">
				<a href="{{@site.url}}"><img src="{{@site.logo}}" alt="{{t "Blog Logo"}}" /></a>
			</span>
			{{/if}}

		</nav>
		<span class="blog-name"><a href="{{@site.url}}">{{@site.title}}</a></span>
		{{#if @site.description}}
		<span class="blog-description">{{@site.description}}</span>
		{{/if}}

		<ul>
			{{#foreach navigation}}
			<li class="nav-{{slug}}{{#if current}} active{{/if}}" role="presentation"><a href="{{url absolute="true"}}">{{label}}</a></li>
			{{/foreach}}
			{{#if @site.twitter}}
			<li class="nav-twitter"><a href="{{twitter_url}}" title="{{@site.twitter}}"><i class="ic ic-twitter"></i> Twitter</a></li>
			{{/if}}
			{{#if @site.facebook}}
			<li class="nav-facebook"><a href="{{facebook_url}}" title="{{@site.facebook}}"><i class="ic ic-facebook"></i> Facebook</a></li>
			{{/if}}
			{{#if @labs.subscribers}}
			<li class="nav-subscribe"><a href="{{@site.url}}/subscribe/"><i class="ic ic-mail"></i> {{t "Subscribe"}}</a></li>
			{{else}}
			<li class="nav-rss"><a href="{{@site.url}}/rss/"><i class="ic ic-rss"></i> {{t "Subscribe"}}</a></li>
			{{/if}}
		</ul>
	</div>
</header>


<div id="index" class="container" style="float:right;">

	<div class="row">
      <div class="col-sm-12" style="margin-left:10%">
		<main class="content" role="main">

			{{> "loop"}}

		</main>
	  </div>
	</div>

</div>
