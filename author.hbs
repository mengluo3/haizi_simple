{{!< default}}

{{#author}}

<section id="blog-author"{{#if cover_image}} class="has-cover"{{else}}{{#if @site.cover_image}} class="has-cover"{{/if}}{{/if}} style="margin-top:10%; font-size:2em;">
	<div class="inner">

		<aside class="post-author">
			<figure class="post-author-avatar avatar">
				{{#if profile_image}}
					<img src="{{profile_image}}" alt="{{name}}" />
				{{/if}}
			</figure>
			<div class="post-author-bio">
				<h2 class="post-author-name">{{name}}</h2>
				{{#if bio}}
					<p class="post-author-about">{{{bio}}}</p>
				{{/if}}
				<span class="post-author-stats"><i class="ic ic-pencil"></i> {{plural ../pagination.total empty=(t "No Posts") singular=(t "% Post") plural=(t "% Posts")}}</span>
				{{#if location}}
					<span class="post-author-location"><i class="ic ic-location"></i> {{location}}</span>
				{{/if}}
				{{#if website}}
					<span class="post-author-website"><i class="ic ic-link"></i> <a href="{{website}}">{{t "Website"}}</a></span>
				{{/if}}
				{{#if twitter}}
					<span class="post-author-twitter"><i class="ic ic-twitter"></i> <a target="_blank" href="{{twitter_url}}">Twitter</a></span>
				{{/if}}
				{{#if facebook}}
					<span class="post-author-facebook"><i class="ic ic-facebook"></i> <a target="_blank" href="{{facebook_url}}">Facebook</a></span>
				{{/if}}
			</div>
			<div class="clear"></div>
		</aside>
	</div>
</section>

{{/author}}

